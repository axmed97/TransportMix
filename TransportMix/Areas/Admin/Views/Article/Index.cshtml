@model List<Articles>
@{ ViewData["Title"] = "Index";
                ViewData["activeTab"] = "Article"; }

<style>
    @@media (max-width:600px) {
        .img-td {
            display: none !important;
        }
    }
    #article_wrapper{
        width: 100% !important
    }
</style>

@section title{
    <h4 class="page-title text-uppercase font-medium font-14">Article</h4>
}

<a href="/Admin/Article/Create" class="btn btn-outline-dark btn-lg btn-block mb-3">Create</a>
<table id="article" class="table table-hover table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th></th>
            <th class="img-td">Image</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        <a href="/Admin/Article/Edit/@(item.Id)" class="btn btn-outline-warning btn-block btn-lg">
            <i class="fas fa-pencil-alt"></i>
        </a>
        <a href="/Admin/Article/Detail/@(item.Id)" class="btn btn-outline-success btn-block btn-lg">
            <i class="fas fa-eye"></i>
        </a>
<form class="mt-2" method="post" asp-controller="Article" asp-action="Delete" asp-route-id="@item.Id">
    <button class="btn btn-outline-danger btn-lg btn-block" onclick="return confirm('Are you sure to delete this image: @(item.Image)')"><i class="far fa-trash-alt fa-2x"></i></button>
</form> 
    </td>
    <td class="img-td"><img src="~/image/@(item.Image)" width="200" alt="Alternate Text" /></td>
    <td>@item.Header</td>
</tr>}
    </tbody>
</table>

@section adminScripts{ 
    <script>
        $(document).ready(function () {
            $('#article').DataTable();
        });
    </script>
}