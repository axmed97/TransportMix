@model Articles
@{
    ViewData["Title"] = "Create";
    ViewData["activeTab"] = "Article";
}

@section title{
    <h4 class="page-title text-uppercase font-medium font-14">Article</h4>
}

<form method="post" class="w-100" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Header"></label>
        <input asp-for="Header" class="form-control" />
        <span asp-validation-for="Header" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <input asp-for="Content" class="form-control" />
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Photo"></label>
        <input asp-for="Photo" accept="image/" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <input type="submit" value="Create" class="btn btn-outline-dark btn-lg btn-block mb-3" />
</form>
<a href="/Admin/Article/Index" class="btn btn-outline-danger btn-lg btn-block">Return</a>

