@model HomeViewModel
@{
    ViewData["Title"] = "Insurance";
}

<!-- Article Start -->
<section class="article-section">
    <div class="container">
        <div class="article-img">
            <img src="~/image/pexels-gustavo-fring-4173191-min.jpg" alt="">
            <h3>Sığorta şirkətləri</h3>
            <div class="article-bg"></div>
        </div>
    </div>
</section>
<!-- Article end -->

<!-- Auto Salon Start -->
<section class="auto-section">
    <div class="container">
        <div class="row">
            @{ 
                InsuranceVM vm = new InsuranceVM()
                {
                    Insurances = Model.Insurances.OrderByDescending(x => x.Id).Take(9).ToList()
                };
            }
            <partial name="_InsurancePartial" model="vm" />
        </div>
        <div class="text-center">
            <button id="insuranceloadMore" class="btn btn-outline-primary" style="font-size: 15px; padding: 15px 30px ">DAHA ÇOX</button>
        </div>
    </div>
</section>
<!-- Auto Salon End -->
