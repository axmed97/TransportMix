@model HomeViewModel
@{
    ViewData["Title"] = "Article";
}

<style>
    .news-item .news-title {
        font-size: 15px !important;
    }
</style>

<!-- Article Start -->
<section class="article-section">
    <div class="container">
        <div class="article-img">
            <img src="~/image/1504931.jpg" alt="">
            <h3>Elmi Məqalələr</h3>
            <div class="article-bg"></div>
        </div>
    </div>
</section>
<!-- Article end -->
<!-- News Start -->
<section class="news-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="news articleLoad">
                    <div class="news-head">
                        <h1>Elmi Məqalələr</h1>
                    </div>
                    @{ 
                        var article = new ArticleVM()
                        {
                            Articles = Model.Articles.Take(10).ToList()
                        };
                    }
                    <partial name="_ArticlePartial" model="article" />
                </div>
                <div class="d-flex justify-content-center">
                        <button id="article-load-more" class="btn btn-primary" style="font-size: 15px; padding: 15px 30px ">DAHA ÇOX</button>
                    </div>
            </div>
            <div class="col-lg-3">
                <div class="side-news">
                    <div class="news-head">
                        <h1>Sponsor</h1>
                    </div>
                    <div class="sponsor">
                        <a  href="http://www.tuna.az/">
                            <img src="~/image/WhatsApp Image 2021-05-26 at 15.56.43.jpeg" class="img-fluid" alt="" />
                        </a>
                        @*<p>Burada sizin reklamınız ola bilər!</p>*@
                    </div>
                    <div class="news-head">
                        <h1>Həftənin Xəbərləri</h1>
                    </div>
                    @foreach (var item in Model.News.Skip(17).Take(5))
                    {
                        <div class="news-item">
                            <div class="news-img">
                                <img src="~/image/@(item.Image)" alt="">
                            </div>
                            <div class="news-info">
                                <div class="news-data">
                                    <span>@item.PublishDate.ToString("dd/MM/yyyy")</span>
                                </div>
                                <h1 class="news-title">@item.Name</h1>
                                <p class="news-text">
                                    @(item.Name.Length>80?item.Name.Substring(0,80)+"...":item.Name)
                                </p>
                                <a target="_blank" href="#" class="news-link">ardını oxu</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- News End -->
